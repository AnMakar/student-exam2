pipeline {
    agent any

    stages {
        stage('github pull') {
		steps {
			sh '''
			cd /opt/student-exam2
			git pull origin master
			'''
		}
	}	
	stage('test') {
            steps {
		sh '''
		cd /opt/student-exam2
		. venv/bin/activate
		pip install -e '.[test]'
		coverage run -m pytest
		coverage report
		'''
            }
        }
    }
}
