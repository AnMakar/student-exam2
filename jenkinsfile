pipeline {
    agent any

    stages {
        stage('github pull') {
		steps {
			sh "git pull origin master"
		}
	}	
	stage('test') {
            steps {
		sh "ls -la"
		sh "pwd"
		sh "python3 -m venv venv"
		sh ". venv/bin/activate"
		sh ". venv/bin/pip install -e '.[test]'"
		sh "coverage run -m pytest"
		sh "coverage report"
            }
        }
    }
}
