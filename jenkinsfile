pipeline {
    agent any

    stages {
        stage('github pull') {
		steps {
			sh "cd /opt/student-exam2"
			sh "git pull origin master"
		}
	}	
	stage('test') {
            steps {
		sh "cd /opt/student-exam2"
		sh "ls -la"
		sh "/opt/student-exam2/venv/bin/activate"
		sh "pip install -e '.[test]'"
		sh "coverage run -m pytest"
		sh "coverage report"
            }
        }
    }
}
