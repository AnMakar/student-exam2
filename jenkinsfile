pipeline {
	agent any
	environment {
		mydockerhub = "anmean/student-exam2"
	}

	stages {
		stage('Test') {
    		steps {
	    		sh '''
				ls -la
				pwd
				python3 -m venv venv
				. venv/bin/activate
				venv/bin/pip install wheel
				venv/bin/pip install -e '.[test]'
				venv/bin/coverage run -m pytest
				venv/bin/coverage report
				'''
			}
		}
		stage('Docker Build') {
			steps { script {
				DockerImage = docker.build(mydockerhub + ":flask", "-f .")
				}
			}
		}
	}
}
